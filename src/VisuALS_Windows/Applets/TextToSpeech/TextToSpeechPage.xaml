<local:AppletPage x:Class="VisuALS_WPF_App.TextToSpeechPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="TextToSpeech">

    <local:VGrid x:Name="TTSGrid" Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.25*"></RowDefinition>
            <RowDefinition Height="0.75*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>

        </Grid.RowDefinitions>

        <local:VTextInput x:Name="textfield"
                 Role="SingleLine"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.RowSpan="1"/>

        <local:VKeyboard x:Name="keyboard"
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="5"/>
        
        <local:VSpeakButton
                Grid.Column="1"
                Grid.RowSpan="2"
                Click="Speak_Click"
                TextSource="{Binding ElementName=textfield}"/>

        <local:VButton x:Name="Recent"
                Role="Navigation"
                Grid.Row="0"
                Grid.Column="2"
                Grid.RowSpan="2"
                Click="Recent_Click"
                Content="{DynamicResource tts_recent}"/>

        <local:VButton x:Name="NeedsCategory"
                Role="Navigation"
                Grid.Row="2"
                Grid.Column="1"
                Click="NeedsCategory_Click"
                Content="{DynamicResource tts_needs}"/>
        
        <local:VButton x:Name="FeelingsCategory"
                Role="Navigation"
                Grid.Row="2"
                Grid.Column="2"
                Click="FeelingsCategory_Click"
                Content="{DynamicResource tts_feelings}"/>
        
        <local:VButton x:Name="ConversationCategory"
                Role="Navigation"
                Grid.Row="3"
                Grid.Column="1"
                Click="ConversationCategory_Click"
                Content="{DynamicResource tts_conversation}"/>
        
        <local:VButton x:Name="HomeAutomationCategory"
                Role="Navigation"
                Grid.Row="3"
                Grid.Column="2"
                Click="HomeAutomationCategory_Click"
                Content="{DynamicResource tts_home_automation}"/>
        
        <local:VButton x:Name="RecordingsCategory"
                Role="Navigation"
                Grid.Row="4"
                Grid.Column="1"
                Click="RecordingsCategory_Click"
                Content="{DynamicResource tts_recordings}"/>

        <local:VButton x:Name="AddPhrase"
                Role="New"
                Grid.Row="5"
                Grid.Column="1"
                Click="AddPhrase_Click"
                Content="{DynamicResource tts_add_phrase}"/>

        <local:VButton x:Name="DeletePhrase"
                Role="Delete"
                Grid.Row="5"
                Grid.Column="2"
                Click="DeletePhrase_Click"
                Content="{DynamicResource tts_delete_phrase}"/>
        
        <!-- pause -->
        <local:VButton x:Name="Pause"
                Role="Pause"
                Grid.Row="4"
                Grid.Column="2"
                Click="Pause_Click"
                Content="{DynamicResource tts_carl_pause}"/>
    </local:VGrid>
</local:AppletPage>
