<local:AppletPage x:Class="VisuALS_WPF_App.NotepadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      xmlns:TermControls="clr-namespace:TermControls;assembly=TermControls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Notepad" Background="Black">
    <local:VGrid x:Name="notepadGrid" Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <local:VTextInput x:Name="titleTextInput"
                 Grid.Row="0"
				 Grid.Column="1" 
				 Grid.ColumnSpan="4"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Role="SingleLine"
                 TextChanged="titleTextInputHandler"/>

        <local:VTextInput x:Name="textInput"
                 Grid.Row="1"
				 Grid.Column="1" 
				 Grid.ColumnSpan="5"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Role="TextBlock"/>

        <local:VKeyboard x:Name="keyboard"
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="3"/>

        <local:VGrid x:Name="fileMenu"
            Role="SubGrid"
            Grid.Row="1" 
            Grid.Column="2"
            Grid.RowSpan="3"
            Margin="0"
            Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <local:VButton x:Name="deleteBtn"
				Content="{DynamicResource np_delete}"
				Grid.Row="0"
                Role="Delete"
				Click="deleteBtn_Click"/>

            <local:VButton x:Name="renameBtn"
				Content="{DynamicResource np_rename}"
				Grid.Row="1"
                Role="Edit"
				Click="renameBtn_Click"/>

            <local:VButton x:Name="openBtn"
				Content="{DynamicResource np_open}"
				Grid.Row="2"
                Role="Open"
				Click="openBtn_Click"/>

            <local:VButton x:Name="newBtn"
				Content="{DynamicResource np_new}"
				Grid.Row="3"
                Role="New"
				Click="newBtn_Click"/>

            <local:VButton x:Name="saveBtn"
				Grid.Row="4"
				Click="saveBtn_Click"
                Role="Save"
                Content="{DynamicResource np_save}"/>
        </local:VGrid>

        <local:VSpeakButton
            Grid.Column="1"
            Grid.Row="3"
            TextSource="{Binding ElementName=textInput}"/>

        <local:VToggle x:Name="fileOptions"
                Grid.Column="2"
                Grid.Row="3"
                Role="Edit"
                FalseOption="{DynamicResource np_file_options}"
                TrueOption="{DynamicResource np_hide_options}"
                OptionSelected="fileOptions_OptionSelected"/>
    </local:VGrid>
</local:AppletPage>