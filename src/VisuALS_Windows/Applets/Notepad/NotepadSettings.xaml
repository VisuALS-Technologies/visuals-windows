<local:AppletPage x:Class="VisuALS_WPF_App.NotepadSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="NotepadSettings">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <local:VLabel
            Role="Title"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="11"
            Grid.RowSpan="3"
            Content="{DynamicResource np_settings_title}"/>

        <local:VToggle x:Name="AutoSave"
                    Grid.Column="3"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    TrueOption="{DynamicResource enabled}"
                    FalseOption="{DynamicResource disabled}"
                    Prefix="{DynamicResource np_autosave_prefix}"
                    OptionSelected="AutoSave_OptionSelected"/>

        <local:VFileSelect x:Name="NotesFolder"
                    Grid.Column="3"
                    Grid.Row="9"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="11"
                    Prefix="{DynamicResource np_notes_folder}"
                    SelectDirectory="True"
                    FileSelected="NotesFolder_FileSelected"/>

    </local:VGrid>
</local:AppletPage>
