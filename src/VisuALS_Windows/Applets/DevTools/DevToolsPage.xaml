<local:AppletPage x:Class="VisuALS_WPF_App.DevToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page1">
    <local:VGrid Role="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <local:VLabel Role="Title"
            Grid.ColumnSpan="2"
            Content="Dev Tools"/>
        <local:VGrid Role="SubGrid"
                     Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:VButton x:Name="copyBtn"
                Grid.Row="0"
                Content="📋 Copy"
                Click="copyBtn_Click"/>
            <local:VGrid
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <local:VButton Role="Language"
                    Grid.Column="0"
                    Click="FindMissingTranslations_Click"
                    Content="Find Missing Translations"/>
                <local:VToggle x:Name="translationsShowMode"
                    Role="Settings"
                    Grid.Column="1"
                    TrueOption="Show Tokens"
                    FalseOption="Show Translations"/>
            </local:VGrid>
            <local:VButton Role="Delete"
                Grid.Row="2"
                Click="ResetAllSettings_Click"
                Content="Reset All Settings"/>
            <local:VButton Role="Delete"
                Grid.Row="3"
                Click="ResetAllTextPredictions_Click"
                Content="Reset All Text Predictions"/>
            <local:VButton Role="NotSpecified"
                Grid.Row="4"
                Click="LoadTextTranslations_Click"
                Content="Load Text Translations"/>
            <local:VButton Role="NotSpecified"
                Grid.Row="5"
                Click="ListAssemblies_Click"
                Content="List Assemblies"/>
            <local:VButton Role="Delete"
                Grid.Row="6"
                Click="ClearOutput_Click"
                Content="🗑️ Clear Output"/>
        </local:VGrid>
        <local:VScrollBox
            x:Name="outputScrollBox"
            Grid.Row="1"
            Grid.Column="1">
            <local:VTextBlock
            Role="Code"
            TextWrapping="NoWrap"/>
        </local:VScrollBox>
    </local:VGrid>
</local:AppletPage>
