<UserControl x:Class="VisuALS_WPF_App.AppletMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="AppletMenu_Loaded">

    <local:VGrid Role="Invisible">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <local:VGrid x:Name="ListGrid"
                Role="Invisible"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="3"/>

        <local:VButton x:Name="NextPage"
                Role="Navigation"
                Grid.Row="1"
                Grid.Column="2"
                Click="NextPage_Click"
                FontSize="{DynamicResource BigFontSize}"
                Content="🞂"/>

        <local:VButton x:Name="PreviousPage"
                Role="Navigation"
                Grid.Row="1"
                Grid.Column="0"
                Click="PreviousPage_Click"
                FontSize="{DynamicResource BigFontSize}"
                Content="🞀"/>
    </local:VGrid>
</UserControl>
