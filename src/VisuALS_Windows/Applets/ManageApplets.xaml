<Page x:Class="VisuALS_WPF_App.ManageApplets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AudioSettings">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:VList x:Name="AppletsList"
                     Prompt="Applets"
                     ItemSelectionChanged="AppletsList_ItemSelectionChanged"
                     ShowSelection="True"
                     Grid.Column="0"/>
        <local:VSeparator Grid.Column="1" Orientation="Vertical"/>
        <local:VGrid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <local:VLabel x:Name="AppletName"
                          Role="Name"
                          Grid.ColumnSpan="3"/>
            <local:VTextBlock x:Name="AppletDescription"
                           Role="Text"
                           Grid.Row="1"
                           Grid.ColumnSpan="3"/>
            <local:VButton x:Name="AppletSettings"
                           Role="Settings"
                           Grid.Column="1"
                           Grid.Row="2"
                           Content="{DynamicResource mm_settings}"
                           Click="AppletSettings_Click"/>
            <local:VToggle x:Name="EnableApplet"
                           Grid.Column="2"
                           Grid.Row="2"
                           ColorOptions="True"
                           OptionSelected="Enable_OptionSelected"
                           FalseOption="{DynamicResource ap_disable}"
                           TrueOption="{DynamicResource ap_enable}"/>
        </local:VGrid>
    </local:VGrid>
</Page>
