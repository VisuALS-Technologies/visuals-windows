<local:AppletPage x:Class="VisuALS_WPF_App.CameraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Camera" Background="Black">
    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <local:VCameraPreview x:Name="CameraPreview"
                              Grid.RowSpan="2"/>
        <local:VButton x:Name="SwapCameraBtn"
                       Grid.Row="0"
                       Grid.Column="1"
                       Role="Toggle"
                       Content="{DynamicResource cm_swap_camera}"
                       Click="SwapCameraBtn_Click"/>
        <local:VButton x:Name="CaptureBtn"
            Grid.Row="1"
            Grid.Column="1"
            Content="{DynamicResource cm_capture}"
            Role="Save"
            Click="CaptureBtn_Click"/>
        
    </local:VGrid>
</local:AppletPage>