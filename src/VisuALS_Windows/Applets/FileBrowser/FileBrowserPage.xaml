<local:AppletPage x:Class="VisuALS_WPF_App.FileBrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page1">
    <local:VGrid Role="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:VLabel Role="Title"
            Grid.ColumnSpan="3"
            Content="File Browser"/>
        <local:VFileBrowser x:Name="FileBrowserSelectionControl"
                Grid.Row="1"
                HideSubmit="True"/>
        <local:VGrid Role="SubGrid"
                     Grid.Row="1"
                     Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:VButton x:Name="View"
                Role="Open"
                Grid.Row="0"
                Click="View_Click"
                Content="{DynamicResource fb_view}"/>
            <local:VButton x:Name="Move"
                Role="Edit"
                Grid.Row="1"
                Click="Move_Click"
                Content="{DynamicResource fb_move}"/>
            <local:VButton x:Name="Rename"
                Role="Edit"
                Grid.Row="2"
                Click="Rename_Click"
                Content="{DynamicResource fb_rename}"/>
            <local:VButton x:Name="Copy"
                Role="Edit"
                Grid.Row="3"
                Click="Copy_Click"
                Content="{DynamicResource fb_copy}"/>
            <local:VButton x:Name="Paste"
                Role="Edit"
                Grid.Row="4"
                Click="Paste_Click"
                Content="{DynamicResource fb_paste}"/>
            <local:VButton x:Name="Delete"
                Role="Delete"
                Grid.Row="5"
                Click="Delete_Click"
                Content="{DynamicResource fb_delete}"/>
        </local:VGrid>
    </local:VGrid>
</local:AppletPage>
