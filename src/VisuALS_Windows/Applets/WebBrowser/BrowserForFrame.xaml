<UserControl x:Class="VisuALS_WPF_App.BrowserForFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">

    <local:VGrid x:Name="BrowserGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <ContentPresenter x:Name="chromiumBrowserFrame"
               Grid.RowSpan="2"/>

        <xctk:BusyIndicator x:Name="Loader" 
                            Grid.RowSpan="2"
                            IsBusy="{Binding}" 
                            BusyContent="Loading..."
                            Width="200"
                            Height="100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

        <local:VKeyboard x:Name="BrowserKeyboard"
            Grid.Row="1"
            Visibility="Hidden"/>

    </local:VGrid>
</UserControl>
