<local:AppletPage x:Class="VisuALS_WPF_App.OldBrowser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d"  
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="OldBrowser">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>

        <local:BrowserForFrame x:Name="browser"
                        Grid.Row="2"
                        Grid.RowSpan="3"
                        Grid.ColumnSpan="8"/>

        <local:VGrid x:Name="phantomButtonGrid"
            Role="Invisible"
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.ColumnSpan="8"/>

        <local:VTextInput x:Name="url"
            Grid.ColumnSpan="4"
            Role="SingleLine"
            KeyDown="url_KeyDown"/>

        <local:VButton x:Name="StopLoading"
            Grid.Column="4"
            Role="Stop"
            Content="❌"
            Click="StopLoading_Click"/>

        <local:VButton x:Name="Refresh"
            Grid.Column="5"
            Role="NotSpecified"
            Content="{DynamicResource wb_refresh}"
            Click="Refresh_Click"/>

        <local:VToggle x:Name="ClickType"
            Grid.Row="1"
            Grid.Column="7"
            Role="NotSpecified"
            Prefix="{DynamicResource wb_click_type_prefix}"
            SelectedOption="Single Click"
            FalseOption="{DynamicResource wb_single_click}"
            TrueOption="{DynamicResource wb_double_click}"/>

        <local:VButton x:Name="Zoom"
            Grid.Column="6"
            Role="NotSpecified"
            Content="{DynamicResource wb_zoom_in}"
            Click="Zoom_Click"/>

        <local:VButton x:Name="DeleteBookmark"
            Grid.Column="7"
            Role="Delete"
            Content="{DynamicResource wb_delete_bookmark}"
            Click="DeleteBookmark_Click"/>

        <local:VButton x:Name="GoBack"
            Grid.Row="1"
            Role="Navigation"
            Content="{DynamicResource wb_go_back}"
            Click="GoBack_Click"/>

        <local:VButton x:Name="GoForward"
            Grid.Row="1"
            Grid.Column="1"
            Role="Navigation"
            Content="{DynamicResource wb_go_forward}"
            Click="GoForward_Click"/>

        <local:VButton x:Name="ScrollUpBtn"
            Grid.Row="1"
            Grid.Column="2"
            Role="Arrow"
            Content="🠉"
            Click="ScrollUpBtn_Click"/>

        <local:VButton x:Name="ScrollDownBtn"
            Grid.Row="1"
            Grid.Column="3"
            Role="Arrow"
            Content="🠋"
            Click="ScrollDownBtn_Click"/>

        <local:VButton x:Name="ScrollLeftBtn"
            Grid.Row="1"
            Grid.Column="4"
            Role="Arrow"
            Content="🠈"
            Click="ScrollLeftBtn_Click"/>

        <local:VButton x:Name="ScrollRightBtn"
            Grid.Row="1"
            Grid.Column="5"
            Role="Arrow"
            Content="🠊"
            Click="ScrollRightBtn_Click"/>

        <local:VToggle x:Name="ClickRead"
            Grid.Row="1"
            Grid.Column="6"
            Prefix="{DynamicResource wb_mode_prefix}"
            SelectedOption="Read"
            FalseOption="{DynamicResource wb_read}"
            TrueOption="{DynamicResource wb_click}"/>

        <local:VButton x:Name="AddBookmark"
            Grid.Column="8"
            Grid.RowSpan="2"
            Role="New"
            Content="{DynamicResource wb_add_bookmark}"
            Click="AddBookmark_Click"/>

        <local:VButton x:Name="BookmarksBtn"
            Grid.Row="2"
            Grid.Column="8"
            Role="Web"
            Content="{DynamicResource wb_bookmarks}"
            Click="Bookmarks_Click"/>

        <local:VButton x:Name="InputUrl"
            Grid.Row="3"
            Grid.Column="8"
            Role="NotSpecified"
            Content="{DynamicResource wb_url_input}"
            Click="InputUrl_Click"/>

        <local:VButton x:Name="BrowserInput"
            Grid.Row="4"
            Grid.Column="8"
            Role="NotSpecified"
            Content="{DynamicResource wb_web_input}"
            Click="BrowserInput_Click"/>

    </local:VGrid>
</local:AppletPage>