<local:VKeyboardTab x:Class="VisuALS_WPF_App.VQwertyTabEs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <local:VGrid x:Name="mainGrid" Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:VGrid Grid.Row="0" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="q"
                Grid.Column="0"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="w"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="e"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="r"
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="t"
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="y"
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="u"
                Grid.Column="6"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="i"
                Grid.Column="7"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="o"
                Grid.Column="8"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="p"
                Grid.Column="9"
                Click="AlphaKey_Click"/>
        </local:VGrid>

        <local:VGrid Grid.Row="1" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="a"
                Grid.Column="0"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="s"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="d"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="f"
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="g"
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="h"
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="j"
                Grid.Column="6"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="k"
                Grid.Column="7"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="l"
                Grid.Column="8"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="ñ"
                Grid.Column="9"
                Click="AlphaKey_Click"/>
        </local:VGrid>

        <local:VGrid Grid.Row="2" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_shift}"
                Grid.Column="0"
                Click="ShiftKey_Click"/>
            <local:VButton
                Role="Key"
                Content="z"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="x"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="c"
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="v"
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="b"
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="n"
                Grid.Column="6"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="m"
                Grid.Column="7"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="⌫"
                Grid.Column="8"
                Click="BackspaceKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_enter}"
                Grid.Column="9"
                Click="EnterKey_Click"/>
        </local:VGrid>

    </local:VGrid>
</local:VKeyboardTab>
