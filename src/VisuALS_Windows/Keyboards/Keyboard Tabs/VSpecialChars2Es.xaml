<local:VKeyboardTab x:Class="VisuALS_WPF_App.VSpecialChars2Es"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid x:Name="mainGrid" Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:VGrid Grid.Row="0" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="@"
                Grid.Column="0"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="#"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="$"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="&amp;"
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="["
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="]"
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="'"
                Grid.Column="6"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="~"
                Grid.Column="7"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="^"
                Grid.Column="8"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="%"
                Grid.Column="9"
                Click="AlphaKey_Click"/>
        </local:VGrid>

        <local:VGrid Grid.Row="1" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="+"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="-"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="*"
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="/"
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="="
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{}{"
                Grid.Column="6"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{}}"
                Grid.Column="7"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="&lt;"
                Grid.Column="8"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content=">"
                Grid.Column="9"
                Click="AlphaKey_Click"/>
        </local:VGrid>

        <local:VGrid Grid.Row="2" Role="Invisible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_other}"
                Grid.Column="0"
                Click="OtherKey_Click"/>
            <local:VButton
                Role="Key"
                Content="|"
                Grid.Column="1"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="°"
                Grid.Column="2"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="("
                Grid.Column="3"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content=")"
                Grid.Column="4"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content=":"
                Grid.Column="5"
                Click="AlphaKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_esc}"
                Grid.Column="6"
                Click="EscapeKey_Click"/>
            <local:VButton
                Role="Key"
                Content="⌫"
                Grid.Column="7"
                Click="BackspaceKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_enter}"
                Grid.Column="8"
                Click="EnterKey_Click"/>
        </local:VGrid>

    </local:VGrid>
</local:VKeyboardTab>
