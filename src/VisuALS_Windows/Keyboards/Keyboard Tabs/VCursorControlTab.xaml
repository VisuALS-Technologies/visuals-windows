<local:VKeyboardTab x:Class="VisuALS_WPF_App.VCursorControlTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid x:Name="mainGrid" Role="ControlGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <local:VGrid Grid.Column="0" Role="Invisible">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <local:VButton
                Role="Key"
                Content="🠉"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                Click="UpKey_Click"/>

            <local:VButton
                Role="Key"
                Content="🠈"
                Grid.ColumnSpan="2"
                Grid.Column="0"
                Grid.Row="1"
                Click="LeftKey_Click"/>
            <local:VButton
                Role="Key"
                Content="🠋"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                Click="DownKey_Click"/>
            <local:VButton
                Role="Key"
                Content="🠊"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                Click="RightKey_Click"/>

            <local:VButton
                Role="Key"
                Content="{DynamicResource key_page_start}"
                Grid.Column="0"
                Grid.Row="2"
                Click="PageStartKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_line_start}"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Click="LineStartKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_line_end}"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Click="LineEndKey_Click"/>
            <local:VButton
                Role="Key"
                Content="{DynamicResource key_page_end}"
                Grid.Column="5"
                Grid.Row="2"
                Click="PageEndKey_Click"/>
        </local:VGrid>

        <local:VSeparator Orientation="Vertical" Grid.Column="1"/>

        <local:VGrid Grid.Column="2" Role="Invisible">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_undo}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Click="UndoKey_Click"/>
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_redo}"
                    Grid.Column="1"
                    Grid.Row="0"
                    Click="RedoKey_Click"/>
            
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_copy}"
                    Grid.Column="0"
                    Grid.Row="1"
                    Click="CopyKey_Click"/>
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_paste}"
                    Grid.Column="1"
                    Grid.Row="1"
                    Click="PasteKey_Click"/>
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_clear_selection}"
                    Grid.Column="0"
                    Grid.Row="2"
                    Click="ClearSelectionKey_Click"/>
            <local:VButton
                    Role="Key"
                    Content="{DynamicResource key_select_all}"
                    Grid.Column="1"
                    Grid.Row="2"
                    Click="SelectAllKey_Click"/>
        </local:VGrid>
    </local:VGrid>
</local:VKeyboardTab>
