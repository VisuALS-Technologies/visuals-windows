<UserControl x:Class="VisuALS_WPF_App.VKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <local:VGrid Role="Invisible">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="PredictionRow" Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:VPredictionButtonsBar x:Name="PredictionBar" Grid.Row="0"/>
        <ContentPresenter x:Name="tabFrame" Grid.Row="1"/>
        <ContentPresenter x:Name="barFrame" Grid.Row="2"/>
    </local:VGrid>
</UserControl>
