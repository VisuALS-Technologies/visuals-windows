<local:VKeyboardTab x:Class="VisuALS_WPF_App.VClassicKeyBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <local:VGrid Role="ControlGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <local:VButton
            Grid.Column="0"
            Role="Key"
            Content="{DynamicResource key_clear}"
            Click="Clear_Click"/>
        <local:VButton
            Grid.Column="1"
            Role="Key"
            Content="{DynamicResource key_space}"
            Click="SpaceBar_Click"/>
        <local:VButton x:Name="MoreButton"
            Grid.Column="2"
            Role="Key"
            Content="{DynamicResource key_more}"
            Click="More_Click"/>
        <local:VButton x:Name="CursorControlButton"
            Grid.Column="3"
            Role="Key"
            Content="{DynamicResource key_cursor_control}"
            Click="CursorControl_Click"/>
        <local:VButton x:Name="MainButton"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Visibility="Hidden"
            Role="Key"
            Content="{DynamicResource key_back}"
            Click="Main_Click"/>
    </local:VGrid>
</local:VKeyboardTab>
