<Application x:Class="VisuALS_WPF_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             Exit="Application_Exit">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/FontSizes.xaml"/>
                <ResourceDictionary Source="Styles/VisualsColors.xaml"/>
                <ResourceDictionary Source="Styles/Style Components/BaseStyles.xaml"/>
                <ResourceDictionary Source="Styles/Themes/GumdropTheme.xaml"/>
                <ResourceDictionary Source="Languages/en.US.xaml"/>
                <ResourceDictionary>

                    <sys:Int32 x:Key="DwellTime">
                        1000
                    </sys:Int32>

                    <Style TargetType="Image">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                    </Style>

                    <Style x:Key="GazePlane" TargetType="Canvas">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Panel.ZIndex" Value="1000"/>
                    </Style>

                    <Style x:Key="Dot" TargetType="Ellipse">
                        <Setter Property="Visibility" Value="Hidden"/>
                        <Setter Property="Stroke" Value="Black"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>