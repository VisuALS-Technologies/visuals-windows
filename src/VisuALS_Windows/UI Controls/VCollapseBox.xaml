<UserControl x:Class="VisuALS_WPF_App.VCollapseBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="0" x:Name="CollapseRow"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:VGrid Role="Invisible"
              ClipToBounds="True"
              Grid.Row="1"
              Grid.ColumnSpan="2">
            <ContentPresenter x:Name="contentPresenter"
                              Visibility="Collapsed"/>
        </local:VGrid>
        <local:VLabel x:Name="textLabel"
            Role="Name"
            Grid.Column="1"
            Content="header"/>
        <local:VButton x:Name="CollapseBtn"
            Role="Navigation"
            Click="CollapseBtn_Click"
            Content="🔻"/>
    </local:VGrid>
</UserControl>
