<UserControl x:Class="VisuALS_WPF_App.VPaginatedText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid Role="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition x:Name="NavRow" Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <local:VTextBlock x:Name="MainTextBlock"
            Role="Message"
            Grid.Row="1"
            Grid.ColumnSpan="4"/>

        <local:VLabel x:Name="titleLabel"
            Role="Header"
            Grid.ColumnSpan="4"
            Content="header"/>
 
        
        <local:VButton x:Name="PreviousPage"
            Role="Navigation"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Click="PreviousPage_Click"
            Content="{DynamicResource vf_previous_page}"/>

        <local:VButton x:Name="NextPage"
            Role="Navigation"
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Click="NextPage_Click"
            Content="{DynamicResource vf_next_page}"/>
        
        <local:VButton x:Name="Close"
            Role="Navigation"
            Grid.Row="2"
            Grid.Column="3"
            Click="Close_Click"
            Visibility="Hidden"
            Content="{DynamicResource close}"/>
    </local:VGrid>
</UserControl>
