<UserControl x:Class="VisuALS_WPF_App.VWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <local:VGrid Role="Invisible">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Col1"/>
            <ColumnDefinition x:Name="Col2" Width="7*"/>
            <ColumnDefinition x:Name="Col3"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row1"/>
            <RowDefinition x:Name="Row2" Height="7*"/>
            <RowDefinition x:Name="Row3"/>
        </Grid.RowDefinitions>
        <Border x:Name="DialogBorder"
                    Grid.Row="1"
                    Grid.Column="1"
                    BorderThickness="4"
                    Background="{StaticResource Lead}"
                    BorderBrush="{StaticResource Obsidian}"
                    Margin="4">
            <local:VGrid Role="Invisible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <local:VButton x:Name="CancelBtn"
                        Grid.Row="0"
                        Grid.Column="4"
                        Visibility="Visible"
                        Role="Cancel"
                        Content="❌"/>
                <local:VGrid Role="DialogBox" 
                           Grid.Row="1"
                           Grid.ColumnSpan="4">
                <Frame Name="ContentFrame"
                           BorderThickness="0, 4, 0, 0"
                           BorderBrush="{StaticResource Obsidian}"
                           NavigationUIVisibility="Hidden"/>
                </local:VGrid>
            </local:VGrid>
        </Border>
    </local:VGrid>
</UserControl>
