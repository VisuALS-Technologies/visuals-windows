<local:VSelectionControl x:Class="VisuALS_WPF_App.VFileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <local:VLabel x:Name="CurrentPath" 
                          Role="Name"
                          Grid.ColumnSpan="4"/>
        <local:VDirectoryList x:Name="DirList"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            ShowSelection="True"
            ShowPrompt="False"/>
        <local:VButton x:Name="Back"
            Role="Navigation"
            Grid.Row="2"
            Grid.Column="0"
            Content="{DynamicResource nv_back}"
            Click="Back_Click"/>
        <local:VButton x:Name="OpenFolder"
            Role="Open"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Content="{DynamicResource np_open}"
            Click="OpenFolder_Click"/>
        <local:VButton x:Name="Submit"
            Role="Submit"
            Grid.Row="2"
            Grid.Column="3"
            Content="{DynamicResource submit}"
            Click="Submit_Click"/>

    </local:VGrid>
</local:VSelectionControl>
