<!-- Authored by Jonathan Ballard -->
<local:VSelectionControl x:Class="VisuALS_WPF_App.VNumPad"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:local="clr-namespace:VisuALS_WPF_App"
                         mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
                         Initialized="VNumPad_Initialized"
                         Loaded="VNumPad_Loaded">

    <!-- This is the base Grid-->
    <!-- It has 3 rows, the confirmation bar, the main key layout, and the bottom 3 keys -->
    <local:VGrid x:Name="BaseGrid"
                 Role="NotSpecified">

        <!-- Defining Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition x:Name="ConfirmationBarRow"
                           Height="1*"/>
            <RowDefinition x:Name="KeyLayoutRow"
                           Height="3*"/>
            <RowDefinition x:Name="BottomRow"
                           Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- ***** Confirmation Box / Interface Style ***** -->
        <!-- Strictly speaking this row only defines the confirmation bar. However, whether or not this bar is visible or
        collapsed (height = 0) defines the NumPad interface style. When the bar is visible then all updates are first diaplayed in the
        text box. When the user is happy with the input they confirm it, which then causes the selection control to update
        (this is the typical use case). When the confirmation bar isn't visible the confirmation step is completely
        bypassed, so each time the user selects a button it causes the whole system to update.-->
        <local:VGrid x:Name="ConfirmationBarGrid"
                     Role="NotSpecified"
                     Grid.Row="0"
                     Grid.Column="0">

            <!-- Defining Grid Layout -->
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Confirmation Bar Elements -->
            <local:VTextInput x:Name="InputBox"
                              Role="SingleLine"
                              Grid.Row="0"
                              Grid.Column="0"
                              PreviewTextInput="InputBox_PreviewTextInput"
                              DataObject.Pasting="InputBox_Pasting"/>

            <local:VButton x:Name="SubmitButton"
                           Role="Submit"
                           Grid.Row="0"
                           Grid.Column="1"
                           Click="Submit_Click"
                           Content="{DynamicResource submit}"/>
        </local:VGrid>

        <!-- ***** Key Layout Grids ***** -->

        <!-- There will be two different options for key grids: phone layout (123 at the top, the default option)
        and computer layout (123 at the bottom) -->
        <!-- *** Phone Key Grid *** -->
        <local:VGrid x:Name="PhoneKeyGrid"
                         Visibility="Visible"
                         Grid.Row="1"
                         Grid.Column="0">

            <!-- Defining Grid Layout (3x3) -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Buttons -->
            <local:VButton x:Name="One_Phone"
                    Grid.Row="0"
                    Grid.Column="0"
                    Click="One_Click"
                    Content="1"/>

            <local:VButton x:Name="Two_Phone"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="Two_Click"
                    Content="2"/>

            <local:VButton x:Name="Three_Phone"
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="Three_Click"
                    Content="3"/>

            <local:VButton x:Name="Four_Phone"
                    Grid.Row="1"
                    Grid.Column="0"
                    Click="Four_Click"
                    Content="4"/>

            <local:VButton x:Name="Five_Phone"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="Five_Click"
                    Content="5"/>

            <local:VButton x:Name="Six_Phone"
                    Grid.Row="1"
                    Grid.Column="2"
                    Click="Six_Click"
                    Content="6"/>

            <local:VButton x:Name="Seven_Phone"
                    Grid.Row="2"
                    Grid.Column="0"
                    Click="Seven_Click"
                    Content="7"/>

            <local:VButton x:Name="Eight_Phone"
                    Grid.Row="2"
                    Grid.Column="1"
                    Click="Eight_Click"
                    Content="8"/>

            <local:VButton x:Name="Nine_Phone"
                    Grid.Row="2"
                    Grid.Column="2"
                    Click="Nine_Click"
                    Content="9"/>

        </local:VGrid>

        <!-- *** Computer Key Grid *** -->
        <local:VGrid x:Name="ComputerKeyGrid"
                         Visibility="Hidden"
                         Grid.Row="1"
                         Grid.Column="0">

            <!-- Defining Grid Layout (3x3) -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Buttons -->
            <local:VButton x:Name="One_Computer"
                    Grid.Row="2"
                    Grid.Column="0"
                    Click="One_Click"
                    Content="1"/>

            <local:VButton x:Name="Two_Computer"
                    Grid.Row="2"
                    Grid.Column="1"
                    Click="Two_Click"
                    Content="2"/>

            <local:VButton x:Name="Three_Computer"
                    Grid.Row="2"
                    Grid.Column="2"
                    Click="Three_Click"
                    Content="3"/>

            <local:VButton x:Name="Four_Computer"
                    Grid.Row="1"
                    Grid.Column="0"
                    Click="Four_Click"
                    Content="4"/>

            <local:VButton x:Name="Five_Computer"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="Five_Click"
                    Content="5"/>

            <local:VButton x:Name="Six_Computer"
                    Grid.Row="1"
                    Grid.Column="2"
                    Click="Six_Click"
                    Content="6"/>

            <local:VButton x:Name="Seven_Computer"
                    Grid.Row="0"
                    Grid.Column="0"
                    Click="Seven_Click"
                    Content="7"/>

            <local:VButton x:Name="Eight_Computer"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="Eight_Click"
                    Content="8"/>

            <local:VButton x:Name="Nine_Computer"
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="Nine_Click"
                    Content="9"/>

        </local:VGrid>

        <!-- ***** Lower grid for the 3 consistent / unchanging buttons ***** -->
        <local:VGrid x:Name="BottomRowGrid"
                     Grid.Column="0"
                     Grid.Row="2">

            <!-- Defining the grid layout -->
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Buttons -->
            <local:VButton x:Name="Zero"
                    Grid.Row="0"
                    Grid.Column="0"
                    Click="Zero_Click"
                    Content="0"/>


            <local:VButton x:Name="DecimalPoint"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="DecimalPoint_Click"
                    Content="."/>

            <local:VButton x:Name="Backspace"
                    Grid.Row="0"
                    Grid.Column="3"
                    Click="Backspace_Click"
                    Content="⌫"/>

        </local:VGrid>

    </local:VGrid>

</local:VSelectionControl>
