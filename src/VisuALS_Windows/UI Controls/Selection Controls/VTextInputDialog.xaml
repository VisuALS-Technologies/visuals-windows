<local:VSelectionControl x:Class="VisuALS_WPF_App.VTextInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:VTextInput x:Name="textBox" TextChanged="textBox_TextChanged"/>
        <local:VLabel x:Name="promptLabel" Role="Hint"/>
        <local:VButton Role="Submit"
            Grid.Column="1"
            Content="{DynamicResource submit}"
            Click="Submit_Click"/>
        <local:VKeyboard x:Name="keyboard"
            Grid.Row="1" 
            Grid.ColumnSpan="2"/>
    </local:VGrid>
</local:VSelectionControl>
