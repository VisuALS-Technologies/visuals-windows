<UserControl x:Class="VisuALS_WPF_App.VScrollBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:VGrid Role="ControlGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition x:Name="NavCol" Width="1*"/>
        </Grid.ColumnDefinitions>

        <local:VGrid Role="Invisible"
              ClipToBounds="True"
              Grid.Row="0"
              Grid.RowSpan="2">
            <ContentPresenter x:Name="contentPresenter"
                              ClipToBounds="False"/>
        </local:VGrid>

        <local:VButton x:Name="DownBtn"
            Role="Navigation"
            Grid.Row="1"
            Grid.Column="1"
            Click="DownBtn_Click"
            Content="🠋"/>
        
        <local:VButton x:Name="UpBtn"
            Role="Navigation"
            Grid.Row="0"
            Grid.Column="1"
            Click="UpBtn_Click"
            Content="🠉"/>
    </local:VGrid>
</UserControl>
