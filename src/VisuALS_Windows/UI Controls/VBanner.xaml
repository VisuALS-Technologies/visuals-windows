<UserControl x:Class="VisuALS_WPF_App.VBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisuALS_WPF_App"
             mc:Ignorable="d"
             Height="100"
             VerticalAlignment="Top"
             d:DesignHeight="100" d:DesignWidth="1000">
    <local:VLabel x:Name="BannerLabel"
                  Role="Notification"
                  CornerRadius="0, 0, 15, 15">
        <StackPanel Orientation="Horizontal">
                <local:VTextBlock x:Name="BannerText"
                              Role="Notification"
                              Margin="15, 0, 40, 0"
                              Text="Message Text"/>
                <local:VButton x:Name="BannerButton"
                MinWidth="200"
                Content="More"/>
                <local:VButton x:Name="DismissButton"
                MinWidth="200"
                Content="Dismiss"
                Click="DismissButton_Click"/>
            </StackPanel>
    </local:VLabel>
</UserControl>
