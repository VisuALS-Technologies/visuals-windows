<Window x:Class="VisuALS_WPF_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisuALS_WPF_App"
        xmlns:TermControls="clr-namespace:TermControls;assembly=TermControls"
        mc:Ignorable="d"
        Title="MainWindow"
        MinHeight="100" 
        MinWidth="150" 
        Height="{Binding}"
        Width="{Binding}"
        d:DesignHeight="1080" d:DesignWidth="1920"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Loaded="Window_Loaded">

    <local:VGrid x:Name="mainGrid" Role="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition x:Name="NavRow" Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="Wallpaper"
            Visibility="Hidden"
            Grid.RowSpan="2"
            Grid.ColumnSpan="6"/>

        <Frame Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Grid.ColumnSpan="6"
               Grid.RowSpan="2"/>

        <local:VButton x:Name="BackBtn"
                Role="Navigation"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="{DynamicResource nv_back}"
                Click="BackBtn_Click"/>

        <local:VButton x:Name="Homebtn"
                Role="Home"
                Grid.Row="3"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Content="{DynamicResource nv_home}"
                Click="Homebtn_Click"/>

        <local:VToggle x:Name="Pausebtn"
                Role="Pause"
                Grid.Row="3"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                FalseOption="{DynamicResource nv_resume}"
                TrueOption="{DynamicResource nv_pause}"
                Value="True"
                OptionSelected="Pause_Selected"/>

        <Rectangle x:Name="fullPauselbl"
               Grid.ColumnSpan="6"
               Grid.RowSpan="3"
               Fill="DimGray"
               Opacity="0.7"
               Visibility="Collapsed"
               IsEnabled="False"/>

        <Rectangle x:Name="pauseRect"
               Grid.ColumnSpan="6"
               Grid.RowSpan="2"
               Fill="DimGray"
               Opacity="0.5"
               Visibility="Collapsed"
               IsEnabled="False"/>

        <Rectangle x:Name="pauseHomeRect"
               Grid.Row="2"
               Grid.Column="2"
               Grid.ColumnSpan="2"
               Fill="DimGray"
               Opacity="0.5"
               Visibility="Collapsed"
               IsEnabled="False"/>

        <Rectangle x:Name="pauseBackRect"
               Grid.Row="3"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Fill="DimGray"
               Opacity="0.5"
               Visibility="Collapsed"
               IsEnabled="False"/>

        <ContentPresenter x:Name="DialogFrame"
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="3"
                Grid.ColumnSpan="6"/>

        <Canvas x:Name="GazePlane" Style="{StaticResource GazePlane}">
            <!--<Ellipse Style="{StaticResource Dot}"/>-->
        </Canvas>

    </local:VGrid>
</Window>

