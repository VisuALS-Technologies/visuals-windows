<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisuALS_WPF_App"
                    xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework">

    <Style TargetType="local:VButton" x:Key="SimpleButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Silver}"/>
        <Style.Triggers>

            <Trigger Property="Role" Value="No">
                <Setter Property="Background" Value="{StaticResource SweetCherry}"/>
            </Trigger>
            <Trigger Property="Role" Value="Stop">
                <Setter Property="Background" Value="{StaticResource SweetCherry}"/>
            </Trigger>
            <Trigger Property="Role" Value="Delete">
                <Setter Property="Background" Value="{StaticResource SweetCherry}"/>
            </Trigger>

            <Trigger Property="Role" Value="Speech">
                <Setter Property="Background" Value="{StaticResource VitaminC}"/>
            </Trigger>
            <Trigger Property="Role" Value="Notes">
                <Setter Property="Background" Value="{StaticResource FreshLemon}"/>
            </Trigger>

            <Trigger Property="Role" Value="Save">
                <Setter Property="Background" Value="{StaticResource BlueRaspberry}"/>
            </Trigger>

            <Trigger Property="Role" Value="Submit">
                <Setter Property="Background" Value="{StaticResource GreenApple}"/>
            </Trigger>

            <Trigger Property="Role" Value="Web">
                <Setter Property="Background" Value="{StaticResource BubbleBlue}"/>
            </Trigger>

            <Trigger Property="Role" Value="Help">
                <Setter Property="Background" Value="{StaticResource PinkLemonade}"/>
            </Trigger>

            <Trigger Property="Role" Value="Pause">
                <Setter Property="Background" Value="{StaticResource VitaminC}"/>
            </Trigger>
            <Trigger Property="Role" Value="Home">
                <Setter Property="Background" Value="{StaticResource BubbleBlue}"/>
            </Trigger>
            <Trigger Property="Role" Value="Alarm">
                <Setter Property="Background" Value="{StaticResource SweetCherry}"/>
            </Trigger>

        </Style.Triggers>
    </Style>

</ResourceDictionary>