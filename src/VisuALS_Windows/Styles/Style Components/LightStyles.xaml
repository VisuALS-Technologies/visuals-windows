<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisuALS_WPF_App"
                    xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework">

    <Style TargetType="local:VButton" x:Key="LightButtonStyle" BasedOn="{StaticResource BaseButtonStyle}"/>

    <Style TargetType="local:VGrid" x:Key="LightGridStyle" BasedOn="{StaticResource BaseGridStyle}"/>

    <Style TargetType="local:VLabel" x:Key="LightLabelStyle" BasedOn="{StaticResource BaseLabelStyle}"/>

    <Style TargetType="local:VTextBlock" x:Key="LightTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}"/>

    <Style TargetType="local:VTextInput" x:Key="LightTextInputStyle" BasedOn="{StaticResource BaseTextInputStyle}"/>

    <Style TargetType="local:VSeparator" x:Key="LightSeparatorStyle" BasedOn="{StaticResource BaseSeparatorStyle}"/>

</ResourceDictionary>