<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisuALS_WPF_App"
                    xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Style x:Key="DarkGlassGridStyle" TargetType="local:VGrid" BasedOn="{StaticResource BaseGridStyle}">
        <Style.Triggers>
            <Trigger Property="Role" Value="MainGrid">
                <Setter Property="Background" Value="{StaticResource White}"/>
            </Trigger>
            <Trigger Property="Role" Value="DialogBox">
                <Setter Property="Background" Value="{StaticResource White}"/>
            </Trigger>
            <Trigger Property="Role" Value="ControlGrid">
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
            <Trigger Property="Role" Value="SubGrid">
                <Setter Property="Background" Value="{StaticResource LightGlass}"/>
                <Setter Property="Margin" Value="10"/>
            </Trigger>
            <Trigger Property="Role" Value="Invisible">
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
            <Trigger Property="Role" Value="NotSpecified">
                <Setter Property="Background" Value="{StaticResource White}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="local:VTextInput" x:Key="DarkGlassTextInputStyle" BasedOn="{StaticResource BaseTextInputStyle}">
        <Setter Property="Background" Value="{StaticResource LightGlass}"/>
        <Setter Property="Foreground" Value="{DynamicResource DarkAccentColor}"/>
    </Style>

</ResourceDictionary>