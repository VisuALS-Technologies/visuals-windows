<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisuALS_WPF_App"
                    xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Style Components/CandyButton.xaml"/>
        <ResourceDictionary Source="../Style Components/LightStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="local:VButton" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VColorSelect" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VOptionBox" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VComboBox" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VToggle" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VSpeakButton" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VFileSelect" BasedOn="{StaticResource CandyButtonStyle}"/>
    <Style TargetType="local:VGrid" BasedOn="{StaticResource LightGridStyle}"/>
    <Style TargetType="local:VLabel" BasedOn="{StaticResource LightLabelStyle}"/>
    <Style TargetType="local:VTextBlock" BasedOn="{StaticResource LightTextBlockStyle}"/>
    <Style TargetType="local:VTextInput" BasedOn="{StaticResource LightTextInputStyle}"/>
    <Style TargetType="local:VSeparator" BasedOn="{StaticResource LightSeparatorStyle}"/>
    
</ResourceDictionary>