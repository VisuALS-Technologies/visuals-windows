<Page x:Class="VisuALS_WPF_App.UninstallOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="UninstallOptions">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:VLabel Role="Title"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="13"
            Grid.RowSpan="3"
            Content="Uninstall Options"/>

        <local:VTextBlock Role="Message"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="13"
            Grid.RowSpan="5"
            Text="What do you want to do with VisuALS settings files and text prediction data?&#10;If you plan on installing VisuALS again in the future you should press 'Keep'"/>

        <local:VButton Role="Delete"
            Grid.Row="9"
            Grid.Column="3"
            Grid.RowSpan="2"
            Grid.ColumnSpan="4"
            Click="DeleteAppDataFiles_Click"
            Content="Delete"/>

        <local:VButton Role="Yes"
            Grid.Row="9"
            Grid.Column="12"
            Grid.RowSpan="2"
            Grid.ColumnSpan="4"
            Click="KeepAppDataFiles_Click"
            Content="Keep"/>
    </local:VGrid>
</Page>