<Page x:Class="VisuALS_WPF_App.AudioSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AudioSettings">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <local:VLabel
                   Role="Title"
                   Grid.Row="0"
                   Grid.Column="3"
                   Grid.ColumnSpan="11"
                   Grid.RowSpan="3"
                   Content="{DynamicResource ast_title}"/>

        <local:VButton Role="Settings"
                    Grid.Column="2"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Click="VolUp_Click"
                    Content="{DynamicResource ast_volume_up}"/>

        <local:VButton Role="Settings"
                    Grid.Column="2"
                    Grid.Row="8"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Click="VolDown_Click"
                    Content="{DynamicResource ast_volume_down}"/>

        <local:VToggle x:Name="ConfirmationsToggle"
                    Role="Settings"
                    Grid.Column="7"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    OptionSelected="Confirmations_OptionSelected"
                    Prefix="{DynamicResource ast_confirmations}"
                    TrueOption="{DynamicResource enabled}"
                    FalseOption="{DynamicResource disabled}"/>

        <local:VToggle x:Name="MuteAlarmToggle"
                    Role="Settings"
                    Grid.Column="7"
                    Grid.Row="8"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    OptionSelected="MuteAlarm_OptionSelected"
                    Prefix="{DynamicResource ast_mute_alarm}"
                    TrueOption="{DynamicResource yes}"
                    FalseOption="{DynamicResource no}"/>

        <local:VComboBox x:Name="TTSVoiceCombo"
                    Role="Settings"
                    Grid.Column="12"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Prefix="{DynamicResource ast_tts_voice}"
                    Prompt="{DynamicResource ast_select_tts_voice}"
                    Click="TTSVoiceCombo_Click"
                    ItemSelected="TTSVoice_ItemSelected"/>

        <local:VButton Role="Settings"
                    Grid.Column="12"
                    Grid.Row="8"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Content="{DynamicResource ast_test_voice}"
                    Click="TestTTSVoice_Click"/>
        
    </local:VGrid>
</Page>
