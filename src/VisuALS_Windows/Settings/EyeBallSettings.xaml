<Page x:Class="VisuALS_WPF_App.EyeBallSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EyeBallSettings">
    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <local:VLabel
                   Role="Title"
                   Grid.Row="0"
                   Grid.Column="3"
                   Grid.ColumnSpan="11"
                   Grid.RowSpan="3"
                   Content="Eye Ball Settings"/>

        <local:VComboBox x:Name="EyeBallSizeComboBox"
                    Role="Settings"
                    Grid.Column="4"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Prefix="{DynamicResource est_size}"
                    Prompt="{DynamicResource est_size_prompt}"
                    ItemSelected="EyeBallSize_OptionSelected"/>

        <local:VComboBox x:Name="EyeBallBorderComboBox"
                    Role="Settings"
                    Grid.Column="4"
                    Grid.Row="8"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Prefix="{DynamicResource est_border}"
                    Prompt="{DynamicResource est_border_prompt}"
                    ItemSelected="EyeBallBorder_OptionSelected"/>

        <local:VColorSelect x:Name="EyeBallColorSelect"
                    Role="Settings"
                    Grid.Column="10"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Content="{DynamicResource est_color}"
                    ColorSelected="EyeBallColor_ColorSelected"/>

        <local:VColorSelect x:Name="EyeBallBorderColorSelect"
                    Role="Settings"
                    Grid.Column="10"
                    Grid.Row="8"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="3"
                    Content="{DynamicResource est_border_color}"
                    ColorSelected="EyeBallBorderColor_ColorSelected"/>
    </local:VGrid>
</Page>
