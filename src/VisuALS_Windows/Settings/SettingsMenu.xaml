<Page x:Class="VisuALS_WPF_App.SettingsMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisuALS_WPF_App"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SettingsMenu">

    <local:VGrid Role="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:VLabel x:Name="Version"
            Role="Deemphasized"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Grid.RowSpan="2"/>

        <local:VLabel Role="Title"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="13"
            Grid.RowSpan="3"
            Content="{DynamicResource mm_settings}"/>

        <local:VButton Role="Audio"
            Grid.Row="4"
            Grid.Column="2"
            Grid.RowSpan="5"
            Grid.ColumnSpan="3"
            Click="AudioSettings_Click"
            Content="{DynamicResource st_audio_settings}"/>

        <local:VButton Role="Display"
            Grid.Row="4"
            Grid.Column="6"
            Grid.RowSpan="5"
            Grid.ColumnSpan="3"
            Click="DisplaySettings_Click"
            Content="{DynamicResource st_display_settings}"/>

        <local:VButton Role="Language"
            Grid.Row="4"
            Grid.Column="14"
            Grid.RowSpan="5"
            Grid.ColumnSpan="3"
            Click="LanguageSettings_Click"
            Content="{DynamicResource st_language_settings}"/>

        <local:VButton Role="EyeTracking"
            Grid.Row="4"
            Grid.Column="10"
            Grid.RowSpan="5"
            Grid.ColumnSpan="3"
            Click="EyeTrackingSettings_Click"
            Content="{DynamicResource st_eye_tracking_settings}"/>

        <local:VButton Role="Exit"
            Grid.Column="2"
            Grid.Row="10"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Click="Exit_Click"
            Content="{DynamicResource st_exit_visuals}"/>

        <local:VButton Role="Edit"
            Grid.Column="6"
            Grid.Row="10"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Click="ManageApplets_Click"
            Content="{DynamicResource st_manage_applets}"/>

    </local:VGrid>
</Page>